# Interval in seconds between access checks.
# Lower the interval if you notice the same voice file being reused repeatedly.
CHECK_INTERVAL="0.5"

# Watch directory for WEM access - default Steam path placeholder.
# Users must replace this with their actual Steam install path if different.
WATCH_DIR="C:\\Path\\To\\No Man's Sky\\MODS\\DYNAMIC_SUIT_VOICE\\AUDIO\\WINDOWS\\MEDIA\\ENGLISH(US)"

# CSV for mapping WEM numbers to phrases.
# Relative path inside project; users can customize this file.
CSV_PATH="assets/nms_suit_voice_transcripts.csv"

# Output folder where the final WEM files will be saved.
# Usually the same as WATCH_DIR.
OUTPUT_DIR="C:\\Path\\To\\No Man's Sky\\MODS\\DYNAMIC_SUIT_VOICE\\AUDIO\\WINDOWS\\MEDIA\\ENGLISH(US)"

# Batch file path for converting to WEM.
CMD_SCRIPT_PATH="assets/sound2wem/zSound2wem.cmd"

# Ollama settings - assumes local Ollama server.
OLLAMA_SERVER="http://localhost:11434"
OLLAMA_MODEL="gemma3:1b"

# TTS model to use.
# This will be automatically downloaded if not present.
TTS_MODEL="tts_models/en/ljspeech/tacotron2-DDC_ph"

# Icon for system tray; can be replaced by users.
ICON_IMAGE="assets/nms_dsv.png"

# Enable optional logging to CSV files (true/false).
LOGGING=true
